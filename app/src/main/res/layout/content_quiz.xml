<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="10"
                android:progressDrawable="@drawable/bg_progress_bar_custom"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/questionProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions 1/10"
                android:textColor="#616161"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="What is the primary goal of user-centric design?"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingMultiplier="1.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:id="@+id/optionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_option_card"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/optionLabelA"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_gray_light"
                        android:gravity="center"
                        android:text="A."
                        android:textColor="#616161"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/optionTextA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Aesthetic perfection"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_option_card"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/optionLabelB"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_gray_light"
                        android:gravity="center"
                        android:text="B."
                        android:textColor="#616161"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/optionTextB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Business scalability"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_option_card"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/optionLabelC"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_gray_light"
                        android:gravity="center"
                        android:text="C."
                        android:textColor="#616161"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/optionTextC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Solving real user problems"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_option_card"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/optionLabelD"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_gray_light"
                        android:gravity="center"
                        android:text="D."
                        android:textColor="#616161"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/optionTextD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Technical optimization"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Previous"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_gray_light"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_black"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
