<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginEnd="24dp"
            android:progress="100"
            android:progressDrawable="@drawable/bg_progress_bar_rounded" />

        <TextView
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="#757575"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/baskervville"
        android:lineSpacingMultiplier="1.1"
        android:text="Designed Around How You Learn."
        android:textColor="#1E1E1E"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topHeader" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingMultiplier="1.4"
        android:text="Your journey to mastery starts now. Let Osmium be your guide"
        android:textColor="#616161"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/welcom4"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnGoogle" />

    <TextView
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_btn_white"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Continue with Google"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@id/btnEmail" />

    <TextView
        android:id="@+id/btnEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_btn_black"
        android:drawableStart="@drawable/ic_email_white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Continue with email"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@id/tvTerms" />

    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="By continuing, you agree to osmium's Terms of Use and Privacy Policy"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
