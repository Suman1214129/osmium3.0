<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_outline"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/section3Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="What Career Path Are You Aiming For?"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down"
            app:tint="#616161" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section3Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/chipCareerEngineering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_chip_unselected"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Engineering"
            android:textColor="#616161"
            android:textSize="13sp"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chipCareerMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Medical"
                android:textColor="#616161"
                android:textSize="13sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipCareerCivil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Civil Services"
                android:textColor="#616161"
                android:textSize="13sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipCareerOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Other"
                android:textColor="#616161"
                android:textSize="13sp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCareerOther"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_outline"
            android:hint="Enter your career path"
            android:paddingHorizontal="16dp"
            android:textColor="#1E1E1E"
            android:textColorHint="#BDBDBD"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
