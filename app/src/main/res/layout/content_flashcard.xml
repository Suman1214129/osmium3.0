<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F3">

    <FrameLayout
        android:id="@+id/cardStack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <androidx.cardview.widget.CardView
            android:id="@+id/flashcardBack2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#D8D8D8"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/flashcardBack1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8E8E8"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/flashcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#33342E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:id="@+id/flashcardText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="What is the difference between accuracy and precision?"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:fontFamily="@font/baskervville"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.3"
                    android:gravity="top|start"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4D4D4D"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/seeAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See answer"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnPrevFlashcard"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circle_bg_light_gray"
            android:padding="14dp"
            app:tint="#1E1E1E"/>

        <TextView
            android:id="@+id/flashcardCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"/>

        <ImageView
            android:id="@+id/btnNextFlashcard"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_arrow_back"
            android:rotation="180"
            android:background="@drawable/circle_bg_light_gray"
            android:padding="14dp"
            app:tint="#1E1E1E"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
